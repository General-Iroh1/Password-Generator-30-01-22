reason = "google"
with open("Password Saver.rtf",'rb') as IN:
    lines = IN.readlines()

with open("Password Saver.rtf",'wb') as OUT:
    for line in lines:
         if line.lower().find(reason.lower()) != -1:
             OUT.write(line)